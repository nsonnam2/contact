<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog">

        <ImageView
            android:id="@+id/im_image"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            app:srcCompat="@drawable/contacts" />

        <TextView
            android:id="@+id/tv_permission_text"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/im_image"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Cho phép truy cập danh bạ của bạn" />

        <Button
            android:id="@+id/btn_deny"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_below="@+id/tv_permission_text"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Deny"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:background="#0373fc"/>

        <Button
            android:id="@+id/btn_allow"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_below="@+id/tv_permission_text"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="Allow"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:background="#0373fc"/>
    </RelativeLayout>
</RelativeLayout>